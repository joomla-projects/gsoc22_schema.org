<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="schema">
		<fieldset
			name="schema"
			label="PLG_SYSTEM_SCHEMA_FIELD_SCHEMA_LABEL"
		>
			<field
				name="BlogPosting"
				type="subform"
				showon="schemaType:BlogPosting"
			>
				<form>
					
					<field
						name="@type"
						type="hidden"
						default="BlogPosting"
					/>

					<field
						name="noteBlogPost"
						type="note"
						description="PLG_SCHEMAORG_BLOG_DESCRIPTION_LABEL"
						class="alert alert-info w-100"
					/>


					<field 
						name="image"
						type="media"
						label="PLG_SCHEMAORG_BLOG_FIELD_IMAGE_LABEL"
					/>

					<field
						name="headline"
						type="text"
						filter="string"
						size="30"
						label="PLG_SCHEMAORG_BLOG_FIELD_HEADLINE_LABEL"
					/>

					<field
						name="description"
						type="text"
						filter="string"
						label="PLG_SCHEMAORG_BLOG_FIELD_DESCRIPTION_LABEL"
					/>

					<field
						name="author"
						label="PLG_SCHEMAORG_BLOG_FIELD_AUTHOR_LABEL"
						type="subform"
						>
						<form>
							
							<field
								name="@type"
								type="list"
								label="Type"
								default="person"
								>
								<option value="person">PLG_SCHEMAORG_BLOG_FIELD_PERSON_LABEL</option>
								<option value="organization">PLG_SCHEMAORG_BLOG_FIELD_ORGANIZATION_LABEL</option>
							</field>

							<field
								name="name"
								type="text"
								filter="string"
								label="PLG_SCHEMAORG_BLOG_FIELD_NAME_LABEL"
							/>

							<field
								name="url"
								type="url"
								filter="url"
								validate="url"
								label="PLG_SCHEMAORG_BLOG_FIELD_URL_LABEL"
							/>

							<field
								name="logo"
								type="subform"
								label="logo"
								showon="@type:organization"
							>
								<form>

									<field
										name="@type"
										type="hidden"
										default="ImageObject"
									/>

									<field
										name="url"
										type="media"
										label="PLG_SCHEMAORG_BLOG_FIELD_URL_LABEL"
									/>

								</form>
							</field>

							<field
								name="email"
								type="email"
								validate="email"
								label="PLG_SCHEMAORG_BLOG_FIELD_EMAIL_LABEL"
							/>

							<field
								name="address"
								type="subform"
								label="PLG_SCHEMAORG_BLOG_FIELD_ADDRESS_LABEL"
							>
								<form>
									
									<field
										name="@type"
										type="hidden"
										default="PostalAddress"
									/>

									<field
										name="addressLocality"
										type="text"
										label="PLG_SCHEMAORG_BLOG_FIELD_LOCALITY_LABEL"
									/>

									<field
										name="postalCode"
										type="text"
										label="PLG_SCHEMAORG_BLOG_FIELD_POSTAL_CODE_LABEL"
									/>

									<field
										name="streetAddress"
										type="text"
										label="PLG_SCHEMAORG_BLOG_FIELD_STREET_ADDRESS_LABEL"
									/>

								</form>
							</field>

						</form>
					</field>

					<field
						name="datePublished"
						type="calendar"
						label="PLG_SCHEMAORG_BLOG_FIELD_DATE_PUBLISHED_LABEL"
						class="input-small"
						filter="user_utc"
						showtime="false" 
						todaybutton="true"
						format="%Y-%m-%d"
					/>

					<field
						name="dateModified"
						type="calendar"
						label="PLG_SCHEMAORG_BLOG_FIELD_DATE_MODIFIED_LABEL"
						class="input-small"
						filter="user_utc"
						showtime="false" 
						todaybutton="true"
						format="%Y-%m-%d"
					/>

				</form>
			</field>
		</fieldset>
	</fields>
</form>
